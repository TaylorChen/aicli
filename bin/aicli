#!/usr/bin/env node

// 增强版 AICLI 统一启动入口
const { spawn } = require('child_process');
const path = require('path');

// 获取当前脚本目录
const scriptDir = path.dirname(__filename);
const enhancedCli = path.join(scriptDir, '..', 'dist', 'index-enhanced.js');

// 启动增强版 AICLI
const child = spawn('node', [enhancedCli, ...process.argv.slice(2)], {
  stdio: 'inherit',
  cwd: process.cwd(),
  env: process.env
});

child.on('exit', (code) => {
  process.exit(code || 0);
});

child.on('error', (err) => {
  console.error('启动失败:', err);
  process.exit(1);
});