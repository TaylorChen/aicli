#!/usr/bin/env node

// Claude风格界面的快捷启动脚本
const { spawn } = require('child_process');
const path = require('path');

// 获取当前脚本的目录
const scriptDir = path.dirname(__filename);
const projectRoot = path.join(scriptDir, '..');

// 启动aicli的claude命令
const child = spawn('node', [path.join(projectRoot, 'src', 'index-enhanced.js'), 'claude', ...process.argv.slice(2)], {
  stdio: 'inherit',
  cwd: process.cwd(),
  env: process.env
});

child.on('exit', (code) => {
  process.exit(code || 0);
});

child.on('error', (err) => {
  console.error('启动失败:', err);
  process.exit(1);
});